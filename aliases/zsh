alias cls="clear"

#edits
alias ezrc="$DOT_EDITOR $HOME/.zshrc"
alias egc="$DOT_EDITOR $HOME/.gitconfig"
alias edp="$DOT_EDITOR $DOT_PROJECT_HOME"


#sourcing
alias szrc="source ~/.zshrc"
alias sgc="source ~/.gitconfig"

#history
alias hgrep="history 100 | grep --color=auto"

#app shortcuts
alias tf="terraform"
alias tg="terragrunt"
alias k="kubectl"

#troubleshooting
alias netshoot='kubectl run netshoot --rm -i --tty --image nicolaka/netshoot -- /bin/bash'

#git
alias gits='git status'
alias gitb='git branch'
alias gitl='git log --oneline --graph --decorate'
alias gitf='git fetch'
alias gitp='git pull'
alias gitpu='git push -u origin HEAD'
alias gitca='git commit -a -m'
alias gitco='git commit'
alias gitc='git checkout'
alias gitcb='git checkout -b'
alias gita='git add .'
alias gitd='git diff'
alias gitds='git diff --staged'

# color aliases
alias ls='ls -G'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

#filesystem viewing
alias ll="ls -alh -G"
alias lsd="ls -ald .*"

alias t="tree -C"
alias t1="tree -LC 1"
alias t2="tree -LC 2"
alias t3="tree -LC 3"
alias td1="tree -dLC 1"
alias td2="tree -dLC 2"
alias td3="tree -dLC 3"
alias ta="tree -C"
alias t1a="tree -LC 1"
alias t2a="tree -LC 2"
alias t3a="tree -LC 3"
alias td1a="tree -dLC 1"
alias td2a="tree -dLC 2"
alias td3a="tree -dLC 3"

#delete
alias rmd="rm -rf"
