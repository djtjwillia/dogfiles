# Example env vars for task-based provisioning.
# Copy this file to .env (kept untracked) and fill in your persona-specific values.

# Global persona selector (personal|work|both)
PERSONA=personal

# Personal identity
GIT_USER_PERSONAL="Hank Cowdog"
GIT_EMAIL_PERSONAL="hank@example.com"
GIT_SIGNINGKEY_PERSONAL="ssh-ed25519 AAAA..."

# Work identity
GIT_USER_WORK="Hank Cowdog"
GIT_EMAIL_WORK="hank@work.example.com"
GIT_SIGNINGKEY_WORK="ssh-ed25519 AAAA..."

# SSH host config examples
SSH_HOST_WORK="work-host"
SSH_HOSTNAME_WORK="work.example.com"
SSH_IDENTITY_WORK="~/.ssh/id_ed25519_work"

# Toggle modules
CONFIG_GIT=true
CONFIG_SSH=true
CONFIG_WINDSURF=true

# Additional variables can be added as needed (e.g., proxy settings).
